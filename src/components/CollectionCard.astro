---
const { collection } = Astro.props;
---

<div class=" w-full md:w-1/2 lg:w-1/3 h-24 px-5 hover:bg-[--card-hover-bg-color] rounded-md">
    <a href={collection.url} class="flex items-center h-full">
        <img class=" rounded-full w-14 h-14 mr-4" src={collection.favicon} />
        <div class="flex flex-col h-full py-3 justify-center">
            <div class="text-[--font-color] mb-1">
                {collection.name}
            </div>
            <div class="text-[--sub-font-color] text-sm line-clamp-2">
                {collection.desc}
            </div>
        </div>
    </a>
</div>